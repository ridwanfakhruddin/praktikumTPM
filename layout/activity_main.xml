<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f40c"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/gambar_pertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/pamungkas" />
    <TextView
        android:layout_toRightOf="@+id/gambar_pertama"
        android:id="@+id/teks_pertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="1dp"
        android:textSize="31dp"
        android:text="When Pamungkas said, 'Makan bubur jangan diaduk"/>

    <ImageView
        android:id="@+id/gambar_kedua"
        android:layout_width="wrap_content"
        android:layout_height="470dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/teks_pertama"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/gambar_pertama"
        android:src="@drawable/sunset" />

    <TextView
        android:id="@+id/teks_kedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar_pertama"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="10dp"
        android:textSize="31dp"
        android:layout_toLeftOf="@+id/teks_pertama"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since 1500." />
</RelativeLayout>